<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarTareaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/teviTituloN"
            android:layout_width="318dp"
            android:layout_height="40dp"
            android:layout_marginTop="56dp"
            android:text="Titulo:"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/teViEditarTarea" />

        <TextView
            android:id="@+id/teviEstadoN"
            android:layout_width="318dp"
            android:layout_height="40dp"
            android:text="Estado:"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edTeDescripcion" />

        <TextView
            android:id="@+id/teViTitulo"
            android:layout_width="320dp"
            android:layout_height="49dp"
            android:background="@drawable/fondo_redondeado"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="Esperando..."
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teviTituloN" />

        <TextView
            android:id="@+id/teViEstado"
            android:layout_width="318dp"
            android:layout_height="50dp"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="Esperando..."
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/fondo_redondeado"
            android:gravity="start|center"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teviEstadoN" />

        <TextView
            android:id="@+id/teViDescripcion"
            android:layout_width="313dp"
            android:layout_height="50dp"
            android:background="@drawable/fondo_redondeado"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="Esperando..."
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teViDescripcionN" />

        <TextView
            android:id="@+id/teViEditarTarea"
            android:layout_width="318dp"
            android:layout_height="58dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/fondo_redondeado"
            android:gravity="center"
            android:text="Editar tarea"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edTeTitulo"
            android:layout_width="318dp"
            android:layout_height="57dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="top|start"
            android:hint="..."
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_dark_background"
            android:textSize="23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teViTitulo" />

        <EditText
            android:id="@+id/edTeDescripcion"
            android:layout_width="318dp"
            android:layout_height="57dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="top|start"
            android:hint="..."
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/cardview_dark_background"
            android:textSize="23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.351"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teViDescripcion" />

        <TextView
            android:id="@+id/teViDescripcionN"
            android:layout_width="318dp"
            android:layout_height="40dp"
            android:text="Descripcion:"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edTeTitulo" />

        <CheckBox
            android:id="@+id/chBoCompletado"
            android:layout_width="318dp"
            android:layout_height="50dp"
            android:buttonTint="@color/white"
            android:text="Completado"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teViEstado" />

        <CheckBox
            android:id="@+id/chBoPendiente"
            android:layout_width="318dp"
            android:layout_height="50dp"
            android:buttonTint="@color/white"
            android:text="Pendiente"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.351"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chBoCompletado" />

        <Button
            android:id="@+id/buttonGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            android:background="@drawable/fondo_redondeado"
            android:text="Guardar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonCancelar"
            app:layout_constraintHorizontal_bias="0.756"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FFB3B3"
            android:text="Cancelar"
            android:textColor="#FF0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonBorrar"
            app:layout_constraintTop_toBottomOf="@+id/chBoPendiente"
            app:layout_constraintVertical_bias="0.34" />

        <Button
            android:id="@+id/buttonBorrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="64dp"
            android:backgroundTint="#FF0000"
            android:text="Borrar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>